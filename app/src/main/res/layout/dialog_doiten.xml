<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="400dp"
    android:background="#00FFFFFF">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:id="@+id/shopp"
        android:background="@drawable/backgroud_doiten">
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/phi"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="170dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/tvname"
            android:layout_width="240dp"
            android:layout_height="66dp"
            android:background="@drawable/tv_doiten"
            android:hint="Nhập tên người chơi"
            android:textAlignment="center"
            android:textStyle="bold">
        </EditText>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/tieude2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/phi">
        <TextView
            android:id="@+id/txtten"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Đổi tên cần 10 ruby"
            android:textColor="#FFAB00"
            android:textStyle="bold"
            android:textSize="22dp"/>
        <ImageView
            android:layout_marginTop="-5dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="-25dp"
            android:layout_toRightOf="@+id/txtten"
            android:background="@drawable/money"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginRight="20dp"
        android:id="@+id/nenchiase"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:layout_alignTop="@+id/tieude2">
        <Button
            android:id="@+id/btnname"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="Chấp nhận"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:background="@drawable/choingayclick"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/cham"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shopp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Chạm để thoát"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="italic">
    </TextView>
</RelativeLayout>