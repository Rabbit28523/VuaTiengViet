<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backchucmung">
    <ImageView
        android:layout_width="400dp"
        android:layout_height="180dp"
        android:layout_marginTop="40dp"
        android:id="@+id/lydoend"
        android:src="@drawable/ketthuc"
        android:layout_centerHorizontal="true">
    </ImageView>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/lydoend"
        android:id="@+id/round"
        android:layout_centerHorizontal="true"
        android:src="@drawable/tvround1">
    </ImageView>

    <TextView
        android:id="@+id/diem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/round"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:text="Điểm số: 01/10"
        android:textColor="#FF6F00"
        android:textSize="35dp"
        android:textStyle="bold">
    </TextView>
    <ImageView
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:id="@+id/choi"
        android:src="@drawable/bn_tiep"
        android:layout_below="@+id/diem"
        android:layout_centerHorizontal="true">
    </ImageView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/choi"
        android:layout_marginTop="40dp">
        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/choilai"
            android:background="@drawable/tuchoir1">
        </Button>
        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/choitiep"
            android:layout_toRightOf="@+id/choilai"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btnchapnhan">
        </Button>
    </RelativeLayout>

</RelativeLayout>