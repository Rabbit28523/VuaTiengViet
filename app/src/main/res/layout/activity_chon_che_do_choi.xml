<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChonCheDoChoi"
    android:background="@drawable/background_chon">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lin1"
        android:layout_above="@+id/lin2"
        android:orientation="vertical"
        android:gravity="center">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:background="@drawable/chedogameshow"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/chedocoban"
            android:id="@+id/chedogameshow"
            android:layout_marginBottom="20dp">
        </androidx.appcompat.widget.AppCompatButton>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:background="@drawable/chedocoban"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:id="@+id/chedocoban">
        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"

        android:layout_marginBottom="50dp">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btnback"
            android:background="@drawable/btnback">
        </androidx.appcompat.widget.AppCompatButton>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/btninfo"
            android:background="@drawable/btninfo">
        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>
</RelativeLayout>